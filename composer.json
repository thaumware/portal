{
    "name": "thaumware/portal",
    "description": "Simple cross-service data relationships",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Thaumware",
            "email": "dev@thaumware.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Thaumware\\Portal\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Thaumware\\Portal\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.2",
        "thaumware/core": "^1.1"
    },
    "suggest": {
        "illuminate/support": "For Laravel integration",
        "illuminate/database": "For Laravel integration",
        "illuminate/http": "For Laravel integration"
    },
    "keywords": [
        "portal",
        "relationships",
        "cross-service",
        "microservices",
        "laravel"
    ]
    ,
    "extra": {
        "laravel": {
            "providers": [
                "Thaumware\\Portal\\Providers\\IlluminatePortalServiceProvider"
            ]
        }
    }
}
